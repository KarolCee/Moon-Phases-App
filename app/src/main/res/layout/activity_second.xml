<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/textAllDates"
        android:layout_width="270dp"
        android:layout_height="522dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        android:text="Proszę wybrać rok po 1899"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterYear" />

    <Button
        android:id="@+id/btnDecrement"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_circular_button"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnIncrement"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIncrement"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_circular_button"
        android:ellipsize="middle"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/enterYear"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterYear"
        android:layout_width="153dp"
        android:layout_height="70dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:autoText="false"
        android:digits="0123456789"
        android:ems="10"
        android:hint="2010"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:numeric="integer"
        android:text="2010"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>